using System;
using System.Linq;

using System;
using System.Collections.Generic;


class NameFormatter
{
    static void Main()
    {
        List<string> originalNames = new List<string>();
        List<string> formattedNames = new List<string>();

        
        Console.WriteLine("Enter 6 full names:");
        for (int i = 0; i < 6; i++)
        {
            Console.Write($"Name {i + 1}: ");
            originalNames.Add(Console.ReadLine());
        }

        
        foreach (string name in originalNames)
        {
            string formattedName = "";
            string[] parts = name.Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);

            foreach (string part in parts)
            {
                if (part.Length > 0)
                {
                    formattedName += part.Substring(0, 1).ToUpper() +
                                   part.Substring(1).ToLower() + " ";
                }
            }

            formattedNames.Add(formattedName.Trim());
        }

        
        Console.WriteLine("\nFormatted Names:");
        foreach (string name in formattedNames)
        {
            Console.WriteLine(name);
        }
    }
}
