class AgeCalculator
{
    static void Main()
    {
        List<string> birthYears = new List<string>();
        int currentYear = DateTime.Now.Year;


        for (int i = 0; i < 5; i++)
        {
            while (true)
            {
                Console.Write($"Enter birth year {i + 1}: ");
                string input = Console.ReadLine();

                if (int.TryParse(input, out int year) && year > 1900 && year <= currentYear)
                {
                    birthYears.Add(input);
                    break;
                }
                Console.WriteLine("Invalid input! Please enter a valid year (1900-current year).");
            }
        }

        Console.WriteLine("\nAge Classification Results:");


        foreach (string yearStr in birthYears)
        {
            int birthYear = Convert.ToInt32(yearStr);
            int age = currentYear - birthYear;
            string classification = "Adult";

            if (age < 18)
            {
                classification = "Minor";
            }
            else if (age >= 65)
            {
                classification = "Senior";
            }

            Console.WriteLine($"Birth Year: {birthYear}, Age: {age}, Classification: {classification}");
        }
    }
}

