using System;
using System.Linq;

using System.Collections.Generic;



class Program
{
    static void Main()
    {
        List<string> studentNames = new List<string>();
        List<int> quizScores = new List<int>();


        Console.WriteLine("Enter 10 student names and their quiz scores:");

        for (int i = 0; i < 10; i++)
        {
            Console.Write($"Student {i + 1} name: ");
            string name = Console.ReadLine();
            studentNames.Add(name);

            int score;
            Console.Write($"Quiz score for {name}: ");
            while (!int.TryParse(Console.ReadLine(), out score))
            {
                Console.WriteLine("Invalid input. Please enter a valid quiz score.");
                Console.Write($"Quiz score for {name}: ");
            }
            quizScores.Add(score);
        }


        List<(string Name, int Score)> students = new List<(string, int)>();
        for (int i = 0; i < studentNames.Count; i++)
        {
            students.Add((studentNames[i], quizScores[i]));
        }


        students.Sort((x, y) => y.Score.CompareTo(x.Score));


        Console.WriteLine("\nTop 3 Performers:");
        for (int i = 0; i < Math.Min(3, students.Count); i++)
        {
            Console.WriteLine($"{i + 1}. {students[i].Name} - Score: {students[i].Score}");
        }
    }
}
